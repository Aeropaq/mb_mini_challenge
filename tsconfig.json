{
	"compilerOptions": {
		// Enables stricter inference for data properties on `this`
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES5",
		"rootDir": ".",
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"module": "CommonJS",
		"lib": [
			"ES5",
			"DOM"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"tmp"
	]
}
